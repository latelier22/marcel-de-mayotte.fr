
generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mysql"
  url      =env("DATABASE_URL")
}

model Photo {
  id          Int         @id @default(autoincrement())
  numero      Int         @default(0) // num√©ro dans le catalogue - CAT
  dimensions  String?     // Les dimensions de la photo - DIM
  createdAt   DateTime    @default(now())
  tags        Tag[]       
  url         String      // L'url de la photo
  name        String      // Nom original du fichier image - IMG
  height      Int         @default(0)
  width       Int         @default(0)
  published   Boolean     @default(true)
  favorites   Favorite[]  // Ajout pour relation avec les favoris
  title       String?     // 
  description String?     // Description de la photo, optionnelle
}



model Tag {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  photos     Photo[]  // Relation many-to-many avec la table des photos
  slug       String   @unique
  mainTag    Boolean  @default(false)
  parentTag  Tag?     @relation("ChildTags", fields: [parentId], references: [id])
  parentId   Int?     @map("parent_id")
  childTags  Tag[]    @relation("ChildTags")
  
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  role       String
  favorites  Favorite[] // Ajout pour relation avec les favoris
}

model Favorite {
  id        Int      @id @default(autoincrement())
  photoId   Int
  userId    Int
  createdAt DateTime @default(now())

  photo  Photo @relation(fields: [photoId], references: [id])
  user   User  @relation(fields: [userId], references: [id])

  @@unique([userId, photoId], name: "userId_photoId")
}

model Citation {
  id              Int        @id @default(autoincrement())
   texte          String     @db.Text
  auteur          String?
  photoId         Int?       // Optional ID of the linked photo
  etat            String     @default("brouillon") // Draft, published, deleted
  parentCitationId Int?      // Optional ID of the parent citation
  parentCitation  Citation?  @relation("ChildCitations", fields: [parentCitationId], references: [id])
  childCitations  Citation[] @relation("ChildCitations")

}